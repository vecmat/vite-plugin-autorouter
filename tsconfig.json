{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es2017",
        "lib": ["ESNext", "DOM"],
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noUnusedParameters": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "*.d.ts", "typings/client.d.ts", "typings/client-react.d.ts"],
    "exclude": ["node_modules", "examples", "dist"]
}
