{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tsc-watch",
            "type": "shell",
            "command": "yarn",
            "args": [
                "build:watch"
            ],
            "problemMatcher": [
                "$tsc-watch"
            ],
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}